#!/usr/bin/env bash
# Function to display subdomain information
display_info() {
    local domain="$1"
    local subdomain="$2"

    # If a subdomain is specified, use it; otherwise, use default subdomains
    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    # Iterate over subdomains and display information
    for sub in "${subdomains[@]}"; do
        result=$(dig +short "$sub.$domain")
        if [ -n "$result" ]; then
            record_type=$(dig "$sub.$domain" | grep -A1 'ANSWER SECTION:' | awk '{print $4}')
            echo "The subdomain $sub is a $record_type record and points to $result"
        else
            echo "The subdomain $sub does not exist."
        fi
    done
}

# Check if at least one argument is provided
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# Parse command-line arguments
domain="$1"
subdomain="$2"

# Call the display_info function
display_info "$domain" "$subdomain"

fi